version: "3.8"

services:
  web:
    build:
      context: .
      dockerfile: manager/Dockerfile
    ports:
      - "8400:8000"
    environment:
      - DATABASE_URL=postgresql://podcast:podcast@db:5432/podcastpurifier
      - REDIS_URL=redis://redis:6379/0
      - AUDIO_STORAGE_PATH=/app/audio
      - PUBLIC_HOSTNAME=${PUBLIC_HOSTNAME:-localhost:8000}
      - MANAGER_BASE_URL=https://podcast.penginlab.com
    volumes:
      - /Volumes/MoarFiles/Podcasts:/app/audio
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_started
    restart: unless-stopped

  db:
    image: postgres:16-alpine
    environment:
      - POSTGRES_USER=podcast
      - POSTGRES_PASSWORD=podcast
      - POSTGRES_DB=podcastpurifier
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U podcast -d podcastpurifier"]
      interval: 5s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  redis:
    image: redis:7-alpine
    ports:
      - "8401:6379"
    volumes:
      - redis_data:/data
    restart: unless-stopped

volumes:
  audio_files:
  postgres_data:
  redis_data:
